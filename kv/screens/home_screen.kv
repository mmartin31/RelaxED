<HomeScreen>:
    name: 'Home'
    CommonBackground:

    BoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "15dp"

        # Header
        Label:
            text: "BREATHEWELL"
            color: 0, 0, 0, 1
            font_size: '42sp'
            bold: True
            size_hint_y: 0.15

        # Main Content
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.75
            spacing: "20dp"

            # Image (Square)
            Image:
                source: "images/verse.jpg"
                size_hint: None, None
                size: min(self.parent.width * 0.8, self.parent.height * 0.6), min(self.parent.width * 0.8, self.parent.height * 0.6)
                pos_hint: {'center_x': 0.5}
                allow_stretch: True
                keep_ratio: True

            # Description Box
            BoxLayout:
                size_hint_y: 0.3
                padding: "15dp"
                canvas.before:
                    Color:
                        rgba: 0.95, 0.6, 0.75, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

                Label:
                    text: "BreatheWell is your companion for managing anxiety and stress. Access resources, screening tools, and daily inspiration to support your mental well-being."
                    color: 0, 0, 0, 1
                    font_size: '16sp'
                    text_size: self.width - dp(30), None
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: 'center'
                    valign: 'middle'
                    pos_hint: {'center_y': 0.5}

        # Navigation Bar
        NavigationBar: